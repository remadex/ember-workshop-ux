{{page-title 'Recipes'}}
<div class='flex flex-wrap'>
  <div class='w-full sm:w-1/3'>
    <LinkTo
      @route='recipes.create'
      class='mb-8 block text-center px-6 py-2 rounded bg-blue-600 text-white duration-200 hover:bg-blue-900'
    >Cr√©er une recette</LinkTo>
    {{#each this.model as |recipe|}}
      <LinkTo
        @route='recipes.detail'
        @model={{recipe.id}}
        @activeClass='bg-blue-300 bg-opacity-30'
        class='px-8 flex justify-between items-center py-4 rounded-xl mb-4 duration-200 hover:bg-blue-300 hover:bg-opacity-30'
      >{{recipe.name}}
        ({{recipe.time}}min)
        <svg
          xmlns='http://www.w3.org/2000/svg'
          class='h-6 w-6'
          fill='none'
          viewBox='0 0 24 24'
          stroke='currentColor'
          stroke-width='2'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            d='M17 8l4 4m0 0l-4 4m4-4H3'
          ></path>
        </svg>
      </LinkTo>
    {{/each}}
  </div>
  <div class='w-full sm:w-2/3 p-8'>
    {{outlet}}
  </div>
</div>